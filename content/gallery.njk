---
layout: layouts/home.njk
eleventyNavigation:
  key: Gallery
  order: 4
---

{% css %}
.gallery {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
  grid-gap: 0px;
  justify-items: center;
  align-items: center;
  width: 100%;
  position: absolute;
  left: 0;
}
img {
	height: 100px;
	width: 100px;
	object-fit: cover;
}
.img-cover {
	height: 100px;
    object-fit: cover;
}

.img-contain {
	height: 100px;
    object-fit: contain;
}

#toggleButton {
	text-align: center;
	font-size: 1.5em;
    background: none!important;
	border: none;
    color: #616C71;
	padding: 5px;
	cursor: pointer;
}
#buttonWrapper {
    text-align: center;
}
{% endcss %}

<p id="buttonWrapper">
<button id="toggleButton">⬅️ Pack/Unpack ➡️</button>
</p>
<section class="gallery">
    {% for image in collections.gallery %}
		{% set replaced = image.imagePath.replace('content/', './') %}
		{% set page_link = image.imagePath | replace(".", "-") | slug %}

			<div class="thumb">
				<a href="{{ page_link }}">
					{% image replaced, "", [100,200,400], [100w] %}
				</a>
			</div>
			{# <img class="img-cover" src="{{replaced}}" alt="", height="100px"> #}

    {% endfor %}
</section>

<script>
	document.getElementById('toggleButton').addEventListener('click', function() {
    var images = document.querySelectorAll('.gallery img');
    images.forEach(function(img) {
        if (img.classList.contains('img-contain')) {
            img.classList.remove('img-contain');
            img.classList.add('img-cover');
        } else {
            img.classList.remove('img-cover');
            img.classList.add('img-contain');
        }
    });
});
</script>
